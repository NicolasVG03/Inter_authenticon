@code {


    [Parameter]
    public String Name { get; set; } = null!;

    public List<Collection>? collections = new List<Collection>();
    public List<Product>? products = new List<Product>();

    public String srcSize { get; set; } = null!;
    public String classNameSize { get; set; } = null!;

    public String srcPrice { get; set; } = null!;
    public String classNamePrice { get; set; } = null!;

    public String Size { get; set; } = null!;

    public String Price { get; set; } = null!;

    public Collection? collectionChosen { get; set; } = null!;

    public bool OpenModalProduct { get; set; }

    private void OnProductModalClose(bool accepted)
    {
        OpenModalProduct = false;
        StateHasChanged();
    }

    private void OpenProductModal()
    {
        OpenModalProduct = true;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        collections = await Http.GetFromJsonAsync<List<Collection>?>("collection");
        if (Name != null)
        {
            collectionChosen = await Http.GetFromJsonAsync<Collection>($"collectionChosen?name={Name}");
            if (collectionChosen != null)
                products = await Http.GetFromJsonAsync<List<Product>?>($"listproduct/{collectionChosen.CollectionID}");
        }


        srcSize = "https://localhost:7232/Imagens/icon_DownArrow.png";
        classNameSize = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter";
        srcPrice = "https://localhost:7232/Imagens/icon_DownArrow.png";
        classNamePrice = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter";
    }

    private void OpenProduct()
    {
        OpenModalProduct = true;
        Console.WriteLine(OpenModalProduct);
        StateHasChanged();
    }

    protected void ChangeImgSize()
    {
        if (srcSize == "https://localhost:7232/Imagens/icon_DownArrow.png")
        {
            srcSize = "https://localhost:7232/Imagens/icon_UpArrow.png";
            classNameSize = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter Up";
        }
        else
        {
            srcSize = "https://localhost:7232/Imagens/icon_DownArrow.png";
            classNameSize = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter";
        }
    }
    protected void ChangeImgPrice()
    {
        if (srcPrice == "https://localhost:7232/Imagens/icon_DownArrow.png")
        {
            srcPrice = "https://localhost:7232/Imagens/icon_UpArrow.png";
            classNamePrice = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter Up";
        }
        else
        {
            srcPrice = "https://localhost:7232/Imagens/icon_DownArrow.png";
            classNamePrice = "btn btn-link collapsed inter-semi-bold-woodsmoke-18px div_Filter";
        }
    }

    protected async Task FilterSize(ChangeEventArgs e)
    {
        if (collectionChosen != null)
            products = await Http.GetFromJsonAsync<List<Product>?>($"listproduct/{collectionChosen.CollectionID}/size={e.Value}");
    }
    public class Collection
    {
        public int CollectionID { get; set; }
        public string? Name { get; set; }
    }

    public class Product
    {
        public int ProductID { get; set; }
        public string Name { get; set; } = null!;
        public string Description { get; set; } = null!;
        public string Color { get; set; } = null!;
        public string Size { get; set; } = null!;
        public decimal UnitPrice { get; set; }
        public int StockQuantity { get; set; }
        public char Gender { get; set; }
        public int Status { get; set; }
        public string? ImageUrl { get; set; } = null!;
        public int CollectionID { get; set; }
        public int CategoryID { get; set; }

    }

}